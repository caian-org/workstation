#! /bin/bash

BUMBLEBEE_TARGET=$HOME/bin/program/bumblebee/themes/cai.json

cp $TEMPLATE_DIRECTORY/bumblebee $BUMBLEBEE_TARGET

sed -i -e "s/@WAL_BLACK@/$WAL_BLACK/g"     $BUMBLEBEE_TARGET
sed -i -e "s/@WAL_RED@/$WAL_RED/g"         $BUMBLEBEE_TARGET
sed -i -e "s/@WAL_GREEN@/$WAL_GREEN/g"     $BUMBLEBEE_TARGET
sed -i -e "s/@WAL_YELLOW@/$WAL_YELLOW/g"   $BUMBLEBEE_TARGET
sed -i -e "s/@WAL_BLUE@/$WAL_BLUE/g"       $BUMBLEBEE_TARGET
sed -i -e "s/@WAL_MAGENTA@/$WAL_MAGENTA/g" $BUMBLEBEE_TARGET
sed -i -e "s/@WAL_CYAN@/$WAL_CYAN/g"       $BUMBLEBEE_TARGET
sed -i -e "s/@WAL_WHITE@/$WAL_WHITE/g"     $BUMBLEBEE_TARGET

